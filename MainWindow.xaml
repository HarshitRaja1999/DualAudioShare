<Window x:Class="DualAudioShare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mw="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:DualAudioShare"
        mc:Ignorable="d"
        WindowState="Normal"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="480" Width="800">
    <!-- Overall dark gradient background -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#101620" Offset="0.0"/>
                <GradientStop Color="#050811" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Device panel -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <StackPanel Grid.Row="0"
                    Margin="0,20,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
            <!-- Icon (two headphones + PC, stylised with Segoe MDL2) -->
            <TextBlock Text=""
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="42"
                       HorizontalAlignment="Center"
                       Opacity="0.9"/>
            <TextBlock Text="Connect two headphones (Bluetooth, jack, USB) and listen to the same audio content."
                       Margin="0,8,0,0"
                       FontSize="13"
                       Foreground="#CCFFFFFF"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
        </StackPanel>

        <!-- ===== CENTER CARD ===== -->
        <Border Grid.Row="1"
                Margin="40,10"
                CornerRadius="18"
                Padding="24"
                Background="#141C27"
                BorderBrush="#303A4A"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title -->
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="*"/>
                    <!-- Devices -->
                    <RowDefinition Height="Auto"/>
                    <!-- Start button + status -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Card title -->
                <TextBlock Grid.Row="0"
                           Text="CONNECT AND SELECT TWO HEADPHONES"
                           FontSize="14"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Foreground="#CCFFFFFF"/>

                <!-- Devices panel -->
                <Grid Grid.Row="2"
                      Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- Device 1 -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Center line -->
                        <ColumnDefinition Width="*"/>
                        <!-- Device 2 -->
                    </Grid.ColumnDefinitions>

                    <!-- Center dashed line -->
                    <Grid Grid.Column="1"
                          Margin="18,0">
                        <Line X1="0" Y1="0" X2="0" Y2="160"
                             Stroke="#55FFFFFF"
                             StrokeThickness="1.2"
                             StrokeDashArray="2,4"
                             Stretch="Fill"
                             VerticalAlignment="Center"/>
                    </Grid>

                    <!-- ========= DEVICE 1 (Source) ========= -->
                    <Border Grid.Column="0"
                        Margin="0,0,16,0"
                        CornerRadius="14"
                        Background="#192231"
                        BorderBrush="#303A4A"
                        BorderThickness="1">
                        <Grid Margin="18">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- icon + labels -->
                                <RowDefinition Height="Auto"/>
                                <!-- combo -->
                                <RowDefinition Height="Auto"/>
                                <!-- (optional) select button -->
                                <RowDefinition Height="*"/>
                                <!-- volume row at bottom -->
                            </Grid.RowDefinitions>

                            <!-- Headphone icon + label -->
                            <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left">
                                    <TextBlock Text=""
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="20"
                                   Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="DEVICE 1"
                                       FontSize="11"
                                       Foreground="#90FFFFFF"
                                       FontWeight="SemiBold"/>
                                    <TextBlock Text="Source device"
                                       FontSize="12"
                                       Foreground="#CCFFFFFF"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Device combo -->
                            <ComboBox x:Name="SourceDeviceCombo"
                                    Grid.Row="1"
                                    Margin="0,14,0,0"
                                    Height="28"
                                    DisplayMemberPath="FriendlyName"
                                    VerticalContentAlignment="Center"
                                    SelectionChanged="SourceDeviceCombo_SelectionChanged"/>

                            <!-- Source volume slider -->
                            <StackPanel Grid.Row="3"
                                    Margin="0,16,0,0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Bottom">
                                        <TextBlock Text="Volume"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"
                                       Foreground="#B0FFFFFF"
                                       FontSize="11"/>
                                        <Slider x:Name="SourceVolumeSlider"
                                    Minimum="0" Maximum="1"
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="False"
                                    Width="170"
                                    ValueChanged="SourceVolumeSlider_ValueChanged"/>
                                        <TextBlock x:Name="SourceVolumeLabel"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="100%"
                                       FontSize="11"
                                       Foreground="#FFFFFFFF"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- ========= DEVICE 2 (Mirror) ========= -->
                    <Border Grid.Column="2"
                        Margin="16,0,0,0"
                        CornerRadius="14"
                        Background="#192231"
                        BorderBrush="#303A4A"
                        BorderThickness="1">
                        <Grid Margin="18">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- icon + labels -->
                                <RowDefinition Height="Auto"/>
                                <!-- combo -->
                                <RowDefinition Height="Auto"/>
                                <!-- (optional) select button -->
                                <RowDefinition Height="*"/>
                                <!-- volume row at bottom -->
                            </Grid.RowDefinitions>

                            <!-- Headphone icon + label -->
                            <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left">
                                <TextBlock Text=""
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="20"
                                    Margin="0,0,8,0"/>
                                    <StackPanel>
                                        <TextBlock Text="DEVICE 2"
                                        FontSize="11"
                                        Foreground="#90FFFFFF"
                                        FontWeight="SemiBold"/>
                                        <TextBlock Text="Mirror device"
                                        FontSize="12"
                                        Foreground="#CCFFFFFF"/>
                                    </StackPanel>
                            </StackPanel>

                            <!-- Device combo -->
                            <ComboBox x:Name="MirrorDeviceCombo"
                                  Grid.Row="1"
                                  Margin="0,14,0,0"
                                  Height="28"
                                  DisplayMemberPath="FriendlyName"
                                  VerticalContentAlignment="Center"/>

                            <!-- Mirror volume slider -->
                            <StackPanel Grid.Row="3"
                                    Margin="0,16,0,0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Bottom">
                                                <TextBlock Text="Volume"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"
                                       Foreground="#B0FFFFFF"
                                       FontSize="11"/>
                                                <Slider x:Name="VolumeSlider"
                                    Minimum="0" Maximum="1"
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="False"
                                    Width="170"
                                    ValueChanged="VolumeSlider_ValueChanged"/>
                                                <TextBlock x:Name="VolumeLabel"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="80%"
                                       FontSize="11"
                                       Foreground="#FFFFFFFF"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid>

                <!-- Start/Stop + status -->
                <StackPanel Grid.Row="3"
                            Orientation="Vertical"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,-20">
                    <Button x:Name="ToggleButton"
                            Content="Start Sharing"
                            Width="180"
                            Height="34"
                            FontWeight="SemiBold"
                            Click="ToggleButton_Click"/>
                    <TextBlock x:Name="StatusText"
                               Margin="0,10,0,0"
                               FontSize="12"
                               Foreground="#B0FFFFFF"
                               HorizontalAlignment="Center"
                               Text="Idle."/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== FOOTER NOTE ===== -->
        <TextBlock Grid.Row="2"
                   Margin="0,0,0,16"
                   Text="Please note that this feature is optimised for headphones only."
                   FontSize="11"
                   Foreground="#66FFFFFF"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>
